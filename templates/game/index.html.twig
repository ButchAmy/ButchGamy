{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <h1>Game index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>Url</th>
                <th>ApiKey</th>
                <th>CreatedOn</th>
                <th>UpdatedOn</th>
                <th>Public</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.title }}</td>
                <td>{{ game.description }}</td>
                <td>{{ game.image }}</td>
                <td>{{ game.url }}</td>
                <td>{{ game.apiKey }}</td>
                <td>{{ game.createdOn ? game.createdOn|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ game.updatedOn ? game.updatedOn|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ game.public ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_game_new') }}">Create new</a>
{% endblock %}
